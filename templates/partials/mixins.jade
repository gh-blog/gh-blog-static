mixin date(date, format)
    if date
        time.date(time-ago=date.toJSON())=formatDate(date)

mixin post(post)
    .post-inner
        .content.markdown-body(dir=post.dir || blog.dir || strings.dir)
            if !attributes.excerpt
                article
                    !=String(post.contents)
                footer
                    small.metadata
                        span.author!=strings.writtenBy
                        | 
                        +date(post.created.date, blog.dateFormat)
                        if post.modified
                            | #{strings.modifiedOn}
                            | 
                            +date(post.modified.date, blog.dateFormat)
                        div.categories
                            for category in post.categories
                                | #{category}
                block
            else
                h2.title= post.title
                p.excerpt= post.excerpt
                footer
                    small.metadata #{strings.writtenOn}
                        +date(post.created.date, blog.dateFormat)

                if post.image
                    .cover.media-container: img(src=post.image)

mixin page(page)
    .page
        for post in page
            a.post(class=post.type, href=post.url)
                +post(post)(excerpt=true)

mixin paginate(currentIndex, total)
    div current page: #{currentIndex}
    each page in total
        a(href=page)